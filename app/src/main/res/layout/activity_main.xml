<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<Button
            android:id="@+id/btnPrueba"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:onClick="prueba"
            android:text="prueba"/>-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="20dp"
            android:src="@mipmap/ic_launcher_foreground"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textSize="15dp"
                            android:textColor="@color/titulo"
                            android:text="@string/titulo_escuchando"
                            android:id="@+id/tv_res"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/negro"
                            android:textSize="17dp"
                            android:id="@+id/tv_escuchado"
                            android:text="@string/texto_escuchando"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="15dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="15dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:textSize="15dp"
                                android:textColor="@color/titulo"
                                android:text="@string/titulo_respuesta"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/negro"
                                android:textSize="17dp"
                                android:id="@+id/tv_respuesta"
                                android:text="@string/texto_respuesta"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <ai.api.ui.AIButton
            android:id="@+id/micButton"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            style="@style/ApiAi.Microphone"
        />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>